{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "prHourlyLimit": 0,
    "labels": [
        "dependencies",
        "renovate"
    ],
    "packageRules": [
        {
            "groupName": "kotlin",
            "matchPackageNames": [
                "/androidx.compose.compiler:compiler/"
            ]
        },
        {
            "groupName": "kotlin",
            "matchPackageNames": [
                "/org.jetbrains.kotlin:.*/"
            ]
        },
        {
            "groupName": "kotlin",
            "matchPackageNames": [
                "/com.google.devtools.ksp/"
            ]
        },
        {
            "groupName": "Android and Gradle",
            "matchPackageNames": [
                "/gradle/"
            ]
        },
        {
            "groupName": "Android and Gradle",
            "matchPackageNames": [
                "/com.android.tools.build/",
                "/com.android.library/",
                "/com.android.application/"
            ]
        }
    ]
}
